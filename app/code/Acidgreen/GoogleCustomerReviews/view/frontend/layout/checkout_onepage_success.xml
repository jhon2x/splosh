<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Acidgreen\Checkout\Block\Onepage\Success" name="checkout.success" template="Acidgreen_Checkout::success.phtml" cacheable="false" >
                <arguments>
                    <argument name="view_model_customer_reviews" xsi:type="object">Acidgreen\GoogleCustomerReviews\Block\View\Model\CustomerReviews</argument>
                </arguments>
                <container name="order.success.additional.info" label="Order Success Additional Info"/>
            </block>
        </referenceContainer>
    </body>
</page>
