<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Backend:etc/system_file.xsd">
    <system>
        <tab id="acidgreen_exo" translate="label" sortOrder="51">
            <label>EXO Settings</label>
        </tab>

        <section id="acidgreen_exo_apisettings">
            <group id="sync_settings">
                <!--
                -->
                <field id="replace_images_enabled" translate="label comment" type="select" sortOrder="28" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Delete images before product sync</label>
                    <comment>Delete the images first before product sync? (For housekeeping purposes)</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="b2b_website_codes" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>B2B Website Codes</label>
                    <comment>B2B Website Codes List (comma-separated). This is for distinguishment of EXO Column mappings.</comment>
                </field>
            </group>
            <group id="settings" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">

                <field id="internalid" translate="label comment" type="text" sortOrder="14" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Internal Exo Id</label>
                    <comment>Static DebtorId on internal staff checkout</comment>
                </field>

                <field id="internalgroup" translate="label comment" type="text" sortOrder="14" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Internal staff group</label>
                    <comment>Magento group of internal staff</comment>
                </field>

            </group>
        </section>

    </system>
</config>
